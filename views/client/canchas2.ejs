        <label for="hora">21:00hs</label>
        <br>
         <input type="radio" id="hora" name="hora" value="22:00" >
        <label for="hora">22:00hs</label> <br>
         
        <input  type="radio" id="hora" name="hora" value="23:00" > 
          <label for="hora">23:00hs</label>
         </div>
         
        </div>
    <div class="col-md-4">
      <label for="pago">Pago</label>
      <select id="pago"  name="pago" class="form-select" aria-label="Default select example">
          <!-- <option hidden value="Efectivo">Efectivo</option> -->
           <option value="Mercado Pago">Mercado Pago</option>
         
        </select>
    </div>
    
     
    <div class="col-12">
    
    <select id="cancha" name="cancha" class="form-select" aria-label="Default select example">
      <option value="cancha1">Cancha2</option>
      <!-- <option hidden value="cancha2">Cancha2</option> -->

